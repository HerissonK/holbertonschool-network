#!/usr/bin/env bash
# Script to configure Ubuntu server

# Copy /etc/hosts to temp file
sudo cp /etc/hosts ~/temp
sudo chown $USER:$USER ~/temp

# Replace localhost IP
sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' ~/temp

# Add facebook.com entry if missing
grep -qxF "8.8.8.8 facebook.com" ~/temp || echo "8.8.8.8 facebook.com" >> ~/temp

# Copy back to /etc/hosts
sudo cp -f ~/temp /etc/hosts

# Remove temp file
rm -f ~/temp
